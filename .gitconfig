[diff]
	tool = vimdiff3
[difftool]
	prompt = false
[difftool "vimdiff3"]
    cmd = nvim -d $LOCAL $REMOTE
[alias]
	dt = difftool
	mt = mergetool
	vimdiff = difftool
	plog = log --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
