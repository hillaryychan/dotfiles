[diff]
	tool = vimdiff3
[difftool]
	prompt = false
[difftool "vimdiff3"]
    cmd = nvim -d $LOCAL $REMOTE
[alias]
	dt = difftool
	vimdiff = difftool
[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
